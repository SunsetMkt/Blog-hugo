{
    "name": "sunset-blog-hugo",
    "description": "Blog refactored.",
    "devDependencies": {
        "@eslint/css": "^0.14.1",
        "@eslint/js": "^9.39.2",
        "@eslint/json": "^0.14.0",
        "@eslint/markdown": "^7.5.1",
        "eslint": "^9.39.2",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "npm-check-updates": "^19.2.1",
        "prettier": "^3.7.4",
        "prettier-plugin-go-template": "^0.0.15",
        "prettier-plugin-lint-md": "^1.0.1",
        "prettier-plugin-toml": "^2.0.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.51.0",
        "wrangler": "^4.54.0"
    },
    "scripts": {
        "build": "hugo --gc --logLevel info",
        "dev": "hugo server -D -M -O",
        "clean": "rm -r public resources",
        "vercel-install-golang": "dnf install -y golang",
        "cloudflare-pages-build": "git fetch --unshallow && hugo --gc --logLevel info && find public -type f -size +25M -print -exec rm -vf {} \\;",
        "git-unshallow": "git fetch --unshallow",
        "rm-25mb-public": "find public -type f -size +25M -print -exec rm -vf {} \\;",
        "list-public": "find public -type f -printf '%P\n' > public/filelist.txt",
        "lint": "eslint . --fix",
        "format": "prettier . --write",
        "test": "hugo -M --logLevel info",
        "prepare": "husky",
        "cloudflare-workers-build": "chmod a+x workers_build.sh && ./workers_build.sh"
    },
    "engines": {
        "node": ">=22",
        "npm": ">=11"
    },
    "lint-staged": {
        "*.{js,ts,json,md}": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "dependencies": {
        "animate.css": "^4.1.1",
        "gutenberg-css": "^0.7.0",
        "js-cookie": "^3.0.5",
        "lenis": "^1.3.17",
        "modern-normalize": "^3.0.1"
    }
}
